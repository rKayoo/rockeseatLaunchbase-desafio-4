{% extends "layout.njk" %}

{% block head %}
  <title>Students</title>
{% endblock%}

{% block content %}
<div class="card">
  <section
      class="avatar"
      style="background: url({{ student.avatar_url }}) no-repeat center center / cover">
  </section>

  <section class="details">

    <form action="/students?_method=PUT" method="POST">
      <h3>Editar Estudante</h3>

      {% include "students/fields.njk" %}

      <input 
        type="hidden" 
        name="id" 
        value="{{ student.id }}"
      >
      <button id="delete-button" form="delete-form" type="submit">Delete</button>
    </form>

    <form id="delete-form" action="/students?_method=DELETE" method="post">
      <input type="hidden" name="id" value="{{ student.id }}">
    </form>

    {% include "confirm.njk" %}

  </section>
</div>
{% endblock%}