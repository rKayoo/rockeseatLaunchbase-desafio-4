{% extends "layout.njk" %}

{% block head %}
  <title>Teachers</title>
{% endblock%}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Nome do Professor</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
        <tr>
          <td>            
            <span style=" background-image:url({{ teacher.avatar_url }})"></span> 
            {{ teacher.name }}
          </td>
          <td>
            {% for subject in teacher.subjects %}
              <span>{{ subject}}</span>
            {% endfor %}
          </td>
          <td><a href="/teachers/{{ teacher.id }}">Ver mais</a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock%}