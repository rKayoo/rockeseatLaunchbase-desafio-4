{% extends "layout.njk" %}

{% block head %}
  <title>Teachers</title>
{% endblock%}

{% block content %}
<form action="/teachers" method="POST">
  <div class="card">
    <section 
      class="avatar"
      style="background: url(https://source.unsplash.com/collection/489203/300x600) no-repeat center center / cover">
    </section>

    <section class="details">

      <h3>Novo professor</h3>

      <div class="item">
        <div>Nome</div>
        <div>
          <input type="text" name="name">
        </div>
      </div>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>
      
      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>
      
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="educational_level">
            <option value="1">Ensino Médio Completo</option>
            <option value="2">Ensino Superior Completo</option>
            <option value="3">Mestrado</option>
            <option value="4">Doutorado</option>
          </select>
        </div>
      </div>
      
      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span><input type="radio" name="type" value="Pr">Presencial</span>
          <span><input type="radio" name="type" value="On">Online</span>
        </div>
      </div>
      
      <div class="item">
        <div>Acompanhamento</div>
        <div>
          <input type="text" name="subjects" placeholder="Separe as matérias com uma vírgula">
        </div>
      </div>

      <button type="submit">SALVAR</button>
      
    </section>
  </div>
</form>
{% endblock%}