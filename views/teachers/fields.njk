<div class="item">
        <div>Nome</div>
        <div>
          <input 
            type="text" 
            name="name"
            placeholder="Nome do professor"
            value="{{ instructor.name }}"
          >
        </div>
      </div>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input 
            type="url" 
            name="avatar_url" 
            placeholder="https://"
            value="{{ instructor.avatar_url }}"
          >
        </div>
      </div>
      
      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input 
            type="date" 
            name="birth"
            value= "{{ instructor.birth }}"
          >
        </div>
      </div>
      
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="educational_level">
            <option value="1">Ensino Médio Completo</option>
            <option value="2" {{ "selected" if instructor.educational_level == 2}}>
              Ensino Superior Completo
            </option>
            <option value="3" {{ "selected" if instructor.educational_level == 3}}>
              Mestrado
            </option>
            <option value="4" {{ "selected" if instructor.educational_level == 4}}>
              Doutorado
            </option>
          </select>
        </div>
      </div>
      
      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>
            <input 
              type="radio" 
              name="type" 
              value="Presencial"
              {% if instructor.type == "Presencial" %}
                checked
              {% endif %}
            >Presencial
          </span>
          <span>
            <input 
              type="radio" 
              name="type" 
              value="Online"
              {% if instructor.type == "Online" %}
                checked
              {% endif %}
            >Online
          </span>
        </div>
      </div>
      
      <div class="item">
        <div>Acompanhamento</div>
        <div>
          <input 
            type="text" 
            name="subjects" 
            placeholder="Separe as matérias com uma vírgula"
            value="{{ instructor.subjects }}"
          >
        </div>
      </div>