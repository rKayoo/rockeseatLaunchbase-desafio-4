{% extends "layout.njk" %}

{% block head %}
  <title>Teachers</title>
{% endblock%}

{% block content %}
  <div class="card">
    <section 
      class="avatar"
      style="background: url({{ teachers.avatar_url }}) no-repeat center center / cover">
    </section>

    <section class="details">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome</div>
        <div>{{ teachers.name }}</div>
      </div>
      
      <div class="item">
        <div>Idade</div>
        <div>{{ teachers.age }}</div>
      </div>
      
      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{ teachers.educational_level}}</div>
      </div>
      
      <div class="item">
        <div>Tipo de aula</div>
        <div>{{ teachers.type }}</div>
      </div>
      
      <div class="item">
        <div>Acompanhamento</div>
        {% for subject in teachers.subjects %}
        <span>{{ subject }}</span>
        {% endfor %}
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{ teachers.since }}</div>
      </div>

      <a href="/teachers/{{teachers.id}}/edit" class="button single-button">EDITAR</a>
      
    </section>
  </div>
{% endblock%}